{% macro mf(class, array_postfix) %}
    {% if array_postfix | length > 0 %}
        {% for postfix in array_postfix|split(' ') %}
            {{ class }}--{{ postfix }}
        {% endfor %}
    {% endif %}
{% endmacro %}

{% macro Picture(props = {}) %}

    {% set sizes = [
        {width: '767px', key: 'S'},
        {width: '1200px', key: 'M'},
        {width: '2000px', key: 'L'},
    ] %}

    {# image - url, expansion - расширение, alt #}
    <picture>
        {% for size in sizes %}
            <source media="(max-width: {{ size.width }})"
                    srcset="{{ props.image }}@1@{{ size.key }}.{{ props.expansion }} 1x,
                            {{ props.image }}@2@{{ size.key }}.{{ props.expansion }} 2x,
                            {{ props.image }}@3@{{ size.key }}.{{ props.expansion }} 3x">
        {% endfor %}

        <img class="{{ props.class }}" src="{{ props.image }}@3@L.{{ props.expansion }}" alt="{{ props.alt }}">
    </picture>
{% endmacro %}

